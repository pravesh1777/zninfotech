<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee_new"
    android:orientation="vertical"
    android:background="#9EE6DD">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_height="600dp"
        android:elevation="20dp"
        app:cardBackgroundColor="#F4A4A4"
        app:cardMaxElevation="20dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/sp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="40dp" android:entries="@array/ar2">

                </Spinner>


                <EditText
                    android:id="@+id/et1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"

                    android:drawableLeft="@drawable/baseline_person_24"
                    android:hint="Emplyoyee Name:"
                    android:padding="15dp"></EditText>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textSize="19dp"></RadioButton>

                    <RadioButton
                        android:id="@+id/r2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textSize="19dp"></RadioButton>

                </LinearLayout>
                <EditText
                    android:id="@+id/et2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/call"

                    android:hint="Mobile no:"
                    android:inputType="number"
                    android:padding="15dp"></EditText>
                <EditText
                    android:id="@+id/et3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="40dp"

                    android:drawableLeft="@drawable/baseline_person_24"
                    android:hint="Email:"
                    android:padding="15dp"></EditText>
                <EditText
                    android:id="@+id/et4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/home_work_24"
                    android:hint=" Address:"
                    android:padding="15dp"></EditText>
                <EditText
                    android:id="@+id/et5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/baseline_edit_note_24"
                    android:hint=" Adhar No:"
                    android:padding="15dp"></EditText>


                <EditText
                    android:id="@+id/et6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/bulleted_"
                    android:hint="Qualification:"
                    android:padding="15dp"></EditText>

                <EditText
                    android:id="@+id/et7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/baseline_engineering_24"
                    android:hint="Experience:"
                    android:padding="15dp"></EditText>

                <EditText
                    android:id="@+id/et8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/baseline_workspace_achivement"
                    android:hint="Achivment:"
                    android:padding="15dp"></EditText>

                <EditText
                    android:id="@+id/et9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/baseline_star_border_purple500_24"
                    android:hint="Remark:"
                    android:padding="15dp"></EditText>

                <EditText
                    android:id="@+id/et10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp" android:drawableLeft="@drawable/baseline_person_4_24"
                    android:layout_marginRight="40dp"
                    android:hint="Date_of_birth:"
                    android:padding="15dp"></EditText>

                <EditText
                    android:id="@+id/et11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp" android:drawableLeft="@drawable/baseline_lock_24"
                    android:layout_marginRight="40dp"
                    android:hint="Password:"
                    android:padding="15dp"></EditText>
                <EditText
                    android:id="@+id/et12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp" android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:layout_marginRight="40dp"
                    android:hint="Date_of_joining:"
                    android:padding="15dp"></EditText>


            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"

        android:layout_marginRight="100dp"
        android:background="#323131"
        android:padding="20dp"
        android:textColor="@color/white"
        android:text="Submit"
        android:textSize="15dp">

    </Button>
</LinearLayout>