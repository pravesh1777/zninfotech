<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enquiry" android:orientation="vertical" android:background="#62B4BC">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent" app:cardCornerRadius="15dp"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:cardBackgroundColor="#94ECE1"
        app:cardMaxElevation="20dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"

        android:drawableLeft="@drawable/baseline_person_24"
        android:hint="Name"
        android:padding="15dp"></EditText>

    <EditText
        android:id="@+id/mno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"

        android:drawableLeft="@drawable/call"
        android:hint="Mobile No."
        android:padding="15dp"></EditText>

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:entries="@array/ar1"
        android:padding="15dp" />

    <EditText
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/circlep"
        android:hint="No of person Insterested"
        android:padding="15dp"></EditText>

    <EditText
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/baseline_edit_note_24"
        android:hint="Remark"
        android:padding="15dp"></EditText>

    <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/blckbdrsyle"
        android:padding="20dp"
        android:text="Submit"
        android:textSize="15dp">

    </Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>