<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_course" android:background="#8BDCD2" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent" app:cardCornerRadius="15dp"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:cardBackgroundColor="#D0FBF6"
        app:cardMaxElevation="20dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="40dp"

                android:drawableLeft="@drawable/baseline_library_books_24"
                android:hint=" Course Name:"
                android:padding="15dp"></EditText>

            <EditText
                android:id="@+id/et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:inputType="number"

                android:drawableLeft="@drawable/money_24"
                android:hint="Fees:"
                android:padding="15dp"></EditText>

            <EditText
                android:id="@+id/et3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:hint="Duration:" android:drawableLeft="@drawable/time_24"
                android:layout_marginRight="40dp"
                android:entries="@array/ar1"
                android:padding="15dp" ></EditText>


            <EditText
                android:id="@+id/et4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:drawableLeft="@drawable/bulleted_"
                android:hint="Description:"
                android:padding="15dp"></EditText>

            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="100dp"
                android:background="#399388"
                android:padding="20dp"
                android:text="Submit"
                android:textSize="15dp" >

            </Button>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>