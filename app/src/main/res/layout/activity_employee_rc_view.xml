    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee_rc_view" android:orientation="vertical">
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="50dp" android:background="@drawable/add_circle_outline_24"
        android:layout_height="50dp" ></ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp" android:src="@drawable/employeee"></ImageView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:background="#95F6EA" android:layout_marginTop="15dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>