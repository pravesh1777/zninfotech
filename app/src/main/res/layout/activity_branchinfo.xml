<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BDCD2"
    android:orientation="vertical"
    tools:context=".Branchinfo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:cardBackgroundColor="#D0FBF6"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="20dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="40dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:hint=" Branch Name:"
                android:inputType="text"
                android:padding="15dp"></EditText>

            <EditText
                android:id="@+id/mno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:drawableLeft="@drawable/call"

                android:hint="Mobile No:"
                android:inputType="number"
                android:padding="15dp"></EditText>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:drawableLeft="@drawable/_location_alt_24"
                android:entries="@array/ar1"
                android:hint="Address:"
                android:padding="15dp"></EditText>


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:hint="Email:"
                android:inputType="textEmailAddress"
                android:padding="15dp"></EditText>

            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="100dp"
                android:background="#399388"
                android:padding="20dp"
                android:text="Submit"
                android:textSize="15dp">

            </Button>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
