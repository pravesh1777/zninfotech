<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/probackground"
    tools:context=".Employee_profile"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/profilepic">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanititalic"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textAlignment="center" android:textColor="@color/white"
           ></TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd1"
        app:cardBackgroundColor="#E3BDBD"
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/et1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                    android:layout_margin="15dp" android:text="sss">

                </TextView>

                <TextView
                    android:id="@+id/et2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                    android:layout_margin="15dp">

                </TextView>

                <TextView
                    android:id="@+id/et3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                    android:layout_margin="15dp">

                </TextView>

                <TextView
                    android:id="@+id/et4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                    android:layout_margin="15dp">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/et5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/et6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/et7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/et8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/et9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/et10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/et11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/et12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/et13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="40dp" android:drawableLeft="@drawable/baseline_arrow_forward_24"
                        android:layout_margin="15dp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>


</LinearLayout>